# Next.js Frontend Environment Variables
# Copy this to .env.local and fill in your values

# API Configuration
# Note: Production uses same-origin API calls to Next.js API routes (no external backend needed)
# NEXT_PUBLIC_API_BASE_URL is only used for legacy code paths (taskNotifications, autoExecute)
# For local dev: http://localhost:4000 (if running separate backend)
# For production: Not needed (uses same-origin)
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000

# Access Control (simple passcode for friends beta)
# Set this to a secret code your friends need to enter
NEXT_PUBLIC_ACCESS_CODE=your-secret-passcode-here

# Supabase (required for database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Image Generation (optional, for studio features)
# Provider priority: tries Runway first (if configured), then falls back to Stable Diffusion
IMAGE_STORAGE_BUCKET=generated-images
IMAGE_PROVIDER_PRIORITY=runway,stable-diffusion
IMAGE_PROVIDER_NAME=replicate-stable-diffusion
IMAGE_PROVIDER_BASE_URL=https://api.replicate.com/v1

# Runway API (for video generation and future image support)
RUNWAY_API_KEY=your-runway-api-key
RUNWAY_API_BASE_URL=https://api.dev.runwayml.com
RUNWAY_API_VERSION=2024-11-06

# Stable Diffusion via Replicate (cost-effective, open-source fallback)
REPLICATE_API_TOKEN=your-replicate-api-token
REPLICATE_MODEL_ID=stability-ai/sdxl:39ed52f2a78e934b3ba6e2a89f5b1c712de7dfea535525255b1aa35c5565e08b

# Giorgio Image Generation (Feature Flags)
GIORGIO_IMAGE_ENABLED=false
IMAGE_PROVIDER=replicate
