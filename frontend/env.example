# Next.js Frontend Environment Variables
# Copy this to .env.local and fill in your values

# API Configuration
# Note: Production uses same-origin API calls to Next.js API routes (no external backend needed)
# NEXT_PUBLIC_API_BASE_URL is only used for legacy code paths (taskNotifications, autoExecute)
# For local dev: http://localhost:4000 (if running separate backend)
# For production: Not needed (uses same-origin)
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000

# Access Control (simple passcode for friends beta)
# Set this to a secret code your friends need to enter
NEXT_PUBLIC_ACCESS_CODE=your-secret-passcode-here

# Supabase (required for database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
# Service Role Key (required for storage uploads - bypasses RLS)
# Get this from: Supabase Dashboard > Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Image Generation (optional, for studio features)
# Provider priority: tries Runway first (if configured), then falls back to Stable Diffusion
IMAGE_STORAGE_BUCKET=generated-images
IMAGE_PROVIDER_PRIORITY=gemini,runway,stable-diffusion
IMAGE_PROVIDER_NAME=replicate-stable-diffusion
IMAGE_PROVIDER_BASE_URL=https://api.replicate.com/v1

# Gemini (Nano Banana) Image Generation
GEMINI_API_KEY=your-gemini-api-key
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image
GEMINI_IMAGE_ASPECT_RATIO=1:1

# Video Generation Providers
# Provider priority: tries Fal.ai Pika first (if configured), then Kling, then Runway
VIDEO_PROVIDER_PRIORITY=fal-pika,kling,runway

# Fal.ai (for image-to-video animation)
FAL_KEY=your-fal-api-key

# Video Animation Settings
VIDEO_DAILY_LIMIT=20
VIDEO_MAX_IMAGE_MB=10
VIDEO_DEFAULT_DURATION=4
VIDEO_DEFAULT_RESOLUTION=720p
VIDEO_DEFAULT_MOTION=low

# Runway API (for video generation and future image support)
RUNWAY_API_KEY=your-runway-api-key
RUNWAY_API_BASE_URL=https://api.dev.runwayml.com
RUNWAY_API_VERSION=2024-11-06

# Kling AI (for video generation with multiple models and post-production editing)
KLING_API_KEY=your-kling-api-key
KLING_API_BASE_URL=https://api.klingai.com

# NanoBanana Pro (for character sheets, storyboards, and upscaling)
NANOBANANA_API_KEY=your-nanobanana-api-key
NANOBANANA_API_BASE_URL=https://api.nanobanana.com

# Suno (for music generation from lyrics)
SUNO_API_KEY=your-suno-api-key
SUNO_API_BASE_URL=https://api.suno.ai/v1

# Stable Diffusion via Replicate (cost-effective, open-source fallback)
REPLICATE_API_TOKEN=your-replicate-api-token
REPLICATE_MODEL_ID=stability-ai/sdxl:39ed52f2a78e934b3ba6e2a89f5b1c712de7dfea535525255b1aa35c5565e08b

# Giorgio Image Generation (Feature Flags)
GIORGIO_IMAGE_ENABLED=false
IMAGE_PROVIDER=replicate

# QNAP Storage (backend-only, for workflow asset storage)
# Path to QNAP mount point (e.g., /mnt/qnap/SkyRas or /Volumes/QNAP/SkyRas)
QNAP_ROOT=/mnt/qnap/SkyRas
# Alternative: SKYRAS_ROOT (same as QNAP_ROOT)
# SKYRAS_ROOT=/mnt/qnap/SkyRas
