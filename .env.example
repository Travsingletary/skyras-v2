# Required for AgentKit / Marcus planning
OPENAI_API_KEY=
# Optional override for planner model (defaults to gpt-4o-mini)
OPENAI_PLANNER_MODEL=gpt-4o-mini

# ----------------------------------------------------------------------------
# Nano Banana (Google Gemini fallback for agent LLM calls)
# ----------------------------------------------------------------------------
# If ANTHROPIC_API_KEY is not set, Marcus/Giorgio can fall back to Gemini.
# IMPORTANT: Never commit real keys; set this in your local .env or hosting env.
NANO_BANANA_API_KEY=
# Optional: Gemini model name (example defaults)
NANO_BANANA_MODEL=gemini-1.5-flash

# Supabase (optional: if set, agents use real Supabase; otherwise mock client)
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Storage Configuration
# Which storage provider to use: supabase, qnap, local, or s3
DEFAULT_STORAGE_PROVIDER=supabase
# Default expiration time for signed URLs in seconds (default: 3600 = 1 hour)
SIGNED_URL_DEFAULT_EXPIRY=3600

# ============================================================================
# Marcus Morning Meeting
# ============================================================================

# Vercel Cron
CRON_SECRET=<generate-random-secret-min-32-chars>
# Comma-separated list of user IDs to generate morning meetings for
MORNING_MEETING_USERS=public

# Encryption (for OAuth tokens)
# Generate with: openssl rand -hex 32
GOOGLE_OAUTH_ENCRYPTION_KEY=<64-character-hex-string>

# Google OAuth (for Calendar integration)
GOOGLE_CLIENT_ID=<your-client-id>.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=<your-client-secret>
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Firebase Cloud Messaging (Public - Frontend)
NEXT_PUBLIC_FIREBASE_API_KEY=<your-api-key>
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=<your-project>.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=<your-project-id>
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=<your-project>.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=<your-sender-id>
NEXT_PUBLIC_FIREBASE_APP_ID=<your-app-id>
NEXT_PUBLIC_FIREBASE_VAPID_KEY=<your-vapid-key>

# Firebase (Private - Backend)
# Base64-encoded service account JSON
# Generate: cat service-account.json | base64
FIREBASE_SERVICE_ACCOUNT=<base64-encoded-service-account-json>

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
